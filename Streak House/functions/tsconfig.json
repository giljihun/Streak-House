{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "lib",
    "skipLibCheck": true   // ✅ 타입 선언 라이브러리 오류 무시
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
